<resources>

    <style name="Widget.Homey.AppWidget.Container" parent="ThemeOverlay.Material3.DynamicColors.DayNight">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.Homey.AppWidget.InnerView" parent="ThemeOverlay.Material3.DynamicColors.DayNight">
        <item name="android:background">@android:color/holo_red_light</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
    </style>

    <style name="Widget.Theme.Homey.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.Homey.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>
</resources>